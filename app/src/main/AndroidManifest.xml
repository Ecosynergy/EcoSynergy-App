<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_transparent"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/logo_transparent"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.EcoSynergyApp"
        tools:targetApi="31"
        android:enableOnBackInvokedCallback="true">

        <activity
            android:name=".login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.ResetActivity"
            android:exported="false" />

        <activity
            android:name=".home.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".home.UserSettingsActivity"
            android:exported="true" />
        <activity
            android:name=".home.AppSettingsActivity"
            android:exported="true" />
        <activity
            android:name=".home.NotificationsActivity"
            android:exported="true" />
        <activity
            android:name=".home.TermsActivity"
            android:exported="true" />

        <activity
            android:name=".register.ConfirmationActivity"
            android:exported="true" />
        <activity
            android:name=".register.RegisterActivity2"
            android:exported="true" />
        <activity
            android:name=".register.RegisterActivity"
            android:exported="true" />

        <activity
            android:name=".teams.TeamSettingsActivity"
            android:exported="true" />
        <activity
            android:name=".teams.TeamBansActivity"
            android:exported="true" />
        <activity
            android:name=".teams.TeamInviteActivity"
            android:exported="true" />
        <activity
            android:name=".teams.TeamMembersActivity"
            android:exported="true" />
        <activity
            android:name=".teams.TeamOverviewActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>
</manifest>