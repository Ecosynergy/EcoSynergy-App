<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".signup.SignUpActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="LogoApp"
                android:src="@drawable/logo_transparent"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/step_circle_active"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"/>

                    <View
                        android:id="@+id/midStep1"
                        android:layout_width="60dp"
                        android:layout_height="4dp"
                        android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/step2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/step_circle_inactive"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <View
                    android:id="@+id/midStep2"
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:background="@color/gray"/>

                    <TextView
                        android:id="@+id/step3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/step_circle_inactive"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contato"/>

                    <View
                        android:layout_width="55dp"
                        android:layout_height="4dp"
                        android:background="@color/transparent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dados"/>

                    <View
                        android:layout_width="65dp"
                        android:layout_height="4dp"
                        android:background="@color/transparent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senha"/>

                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/linearInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">

            <TextView
                android:text="Nome Completo"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="2dp"/>

            <EditText
                android:id="@+id/txtFullname"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="text"
                android:hint="ex.: João Gomes"
                android:background="@drawable/spinner_background"
                android:enabled="true"
                android:textSize="16sp"
                android:paddingStart="15dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:text="Nome de Usuário"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="2dp"/>

            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="text"
                android:hint="ex.: joaogomes"
                android:background="@drawable/spinner_background"
                android:enabled="true"
                android:textSize="16sp"
                android:paddingStart="15dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/txtErrorUsername"
                android:text="Nome de Usuário já está em uso, altere o nome de usuário"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"/>

            <TextView
                android:text="Email"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="3dp"/>

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textEmailAddress"
                android:hint="ex.: joaogomes@mail.com"
                android:background="@drawable/spinner_background"
                android:enabled="true"
                android:textSize="16sp"
                android:paddingStart="15dp"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>



            <LinearLayout
                android:id="@+id/linearNationalityGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

            <TextView
                android:text="Nacionalidade"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="2dp"/>

            <AutoCompleteTextView
                android:id="@+id/txtNationality"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textNoSuggestions"
                android:paddingStart="16dp"
                android:hint="ex.: Brasileiro"
                android:background="@drawable/spinner_background"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/autoError"
                tools:text="Error"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:text="Gênero"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="12sp"
                android:visibility="visible"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="2dp"/>

            <Spinner
                android:entries="@array/gender_array"
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/spinner_background"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/spinnerError"
                tools:text="Error"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearPasswords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:endIconMode="password_toggle"
                    android:hint="Senha">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirmPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirme a Senha"
                    android:layout_marginBottom="15dp"
                    app:endIconMode="password_toggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/btnActionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <Button
                    android:id="@+id/btnAction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONTINUAR"
                    style="@style/CustomButtonStyle"
                    android:textStyle="bold"/>

                <ProgressBar
                    android:id="@+id/progressBarAction"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="@color/white"
                    android:indeterminateTintMode="src_in"/>


            </FrameLayout>

            <FrameLayout
                android:id="@+id/btnSignUpContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <Button
                    android:id="@+id/btnSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CADASTRAR"
                    style="@style/CustomButtonStyle"
                    android:textStyle="bold"/>

                <ProgressBar
                    android:id="@+id/progressBarSignUp"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="@color/white"
                    android:indeterminateTintMode="src_in"/>
            </FrameLayout>


            <TextView
                android:id="@+id/btnStepBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar passo"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:background="?android:attr/colorBackground">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="BackButton"
            android:src="@drawable/baseline_arrow_back_24"
            android:scaleType="fitXY"
            app:tint="?android:attr/iconTint"
            android:layout_margin="15dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"/>

    </LinearLayout>
</RelativeLayout>