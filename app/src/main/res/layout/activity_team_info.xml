<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".teams.TeamInfoActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_gravity="top"
    android:layout_marginTop="70dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgTeam"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_default"
        tools:src="@drawable/e"
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:id="@+id/areaOverview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_bg"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="22dp"
            android:contentDescription="Appearance"
            android:src="@drawable/ic_info"
            app:tint="?android:attr/iconTint"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Visão Geral"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow"
            android:layout_marginEnd="15dp"
            app:tint="?android:attr/iconTint"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/areaGoals"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_bg"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="22dp"
            android:contentDescription="Appearance"
            android:src="@drawable/goals"
            app:tint="?android:attr/iconTint"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Metas"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow"
            android:layout_marginEnd="15dp"
            app:tint="?android:attr/iconTint"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestão de Usuários"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:id="@+id/areaMembers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_bg"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="22dp"
            android:contentDescription="Appearance"
            android:src="@drawable/ic_teams_filled"
            app:tint="?android:attr/iconTint"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Membros"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow"
            android:layout_marginEnd="15dp"
            app:tint="?android:attr/iconTint"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/areaInvites"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_bg"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="22dp"
            android:contentDescription="Appearance"
            android:src="@drawable/ic_invite"
            app:tint="?android:attr/iconTint"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Convites"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow"
            android:layout_marginEnd="15dp"
            app:tint="?android:attr/iconTint"/>
    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:background="?android:attr/colorBackground">


            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="CloseButton"
                android:src="@drawable/ic_close"
                android:scaleType="fitXY"
                app:tint="?android:attr/iconTint"
                android:layout_margin="15dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="Informações da Equipe"
                android:textAlignment="center"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="55dp"/>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/colorForeground"/>

    </LinearLayout>
</RelativeLayout>