                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="15dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O usuário tem o direito de acessar, corrigir e, quando aplicável, excluir seus dados pessoais armazenados pela Ecosynergy. Para exercer esses direitos, entre em contato conosco pelo contato@ecosynergybr.com."
                android:layout_gravity="center"
                android:textSize="15sp"
                android:justificationMode="inter_word"
                android:layout_marginHorizontal="5dp"
                android:textColor="?android:attr/textColorPrimary"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/shimmer"
                android:layout_marginVertical="20dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Isenção de Responsabilidade"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"/>
