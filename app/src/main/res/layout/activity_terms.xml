                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="5dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Os dados pessoais e ambientais coletados pela Ecosynergy são confidenciais e não serão compartilhados com terceiros sem consentimento, exceto quando exigido por lei ou regulamentação."
