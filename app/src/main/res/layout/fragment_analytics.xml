<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.homefragments.Analytics"
    android:focusable="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/btnNewSensor"
                android:text="Novo sensor"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                style="@style/CustomButtonStyle"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/btnSensor"
                android:text="Gerenciar sensores"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                style="@style/CustomButtonStyle"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginStart="10dp">

            <TextView
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:text="Monitoramento mensal dos gases emitidos"
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:entries="@array/time_array"
                android:layout_marginBottom="20dp"
                android:background="?android:attr/colorForeground"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="?attr/fragmentsBackground"
                android:scaleType="center"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="?attr/fragmentsBackground"
                android:scaleType="center"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>