<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".teams.CreateTeamBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="top"
                android:scaleType="fitXY"
                android:src="@drawable/baseline_close_24"
                app:tint="?android:attr/iconTint" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp">

                <TextView
                    android:text="Editar as Metas de Emissões"
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/txtDailyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="numberDecimal"
                    android:hint="Diária"
                    android:background="@drawable/spinner_background"
                    android:textSize="16sp"
                    android:paddingStart="15dp"
                    android:layout_marginBottom="10dp"/>
                <EditText
                    android:id="@+id/txtWeeklyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="numberDecimal"
                    android:hint="Semanal"
                    android:background="@drawable/spinner_background"
                    android:textSize="16sp"
                    android:paddingStart="15dp"
                    android:layout_marginBottom="10dp"/>


                <EditText
                    android:id="@+id/txtMonthlyGoal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="numberDecimal"
                    android:hint="Mensal"
                    android:background="@drawable/spinner_background"
                    android:textSize="16sp"
                    android:paddingStart="15dp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/txtAnnualGoal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:inputType="numberDecimal"
                    android:hint="Anual"
                    android:background="@drawable/spinner_background"
                    android:textSize="16sp"
                    android:paddingStart="15dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


    <View
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_shape"
        android:backgroundTint="?attr/shimmerColor"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>