<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.fragments.Home"
    android:id="@+id/swipeRefresh"
    android:focusable="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:id="@+id/root_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bem vindo, "
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblFirstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greenDark"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="UsuÃ¡rio!" />

                <com.facebook.shimmer.ShimmerFrameLayout
                    android:id="@+id/shimmerName"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:visibility="visible"
                    app:shimmer_auto_start="true">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rect_shape"
                        android:backgroundTint="?attr/shimmerColor"
                        android:visibility="visible" />
                </com.facebook.shimmer.ShimmerFrameLayout>

                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/transparent"
                    android:contentDescription="ButtonShare"
                    android:scaleType="fitEnd"
                    android:layout_gravity="end"
                    android:src="@drawable/share_24"
                    app:tint="?android:attr/iconTint" />

            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarStyle="insideOverlay">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Spinner
                    android:id="@+id/spinnerTeam"
                    android:entries="@array/period_array"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/spinner_home"
                    android:spinnerMode="dropdown"
                    />

                <Spinner
                    android:id="@+id/spinnerPeriod"
                    android:entries="@array/period_array"
                    android:layout_width="150dp"
                    android:spinnerMode="dropdown"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_home"
                    android:layout_marginStart="5dp"
                    />

                <Spinner
                    android:entries="@array/period_array"
                    android:layout_width="150dp"
                    android:spinnerMode="dropdown"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_home"
                    android:layout_marginStart="5dp"
                    android:visibility="gone"
                    />
            </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MQ7"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/mq7Chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"/>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerMQ7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        app:shimmer_auto_start="true"
                        android:visibility="visible">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/chart_shape"
                            android:visibility="visible"
                            android:backgroundTint="?attr/shimmerColor"/>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MQ135"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/mq135Chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"/>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerMQ135"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        app:shimmer_auto_start="true"
                        android:visibility="visible">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/chart_shape"
                            android:visibility="visible"
                            android:backgroundTint="?attr/shimmerColor"/>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sensor de Fogo"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/fireChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"/>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmerFire"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        app:shimmer_auto_start="true"
                        android:visibility="visible">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/chart_shape"
                            android:visibility="visible"
                            android:backgroundTint="?attr/shimmerColor"/>
                    </com.facebook.shimmer.ShimmerFrameLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
