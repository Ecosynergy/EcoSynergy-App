<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.homefragments.Notifications">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <ImageView
        android:id="@+id/imgAlert"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/baseline_notifications_off_24"
        android:layout_marginBottom="20dp"
        app:tint="?android:attr/iconTint"/>

    <TextView
        android:id="@+id/txtAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textAlignment="center"
        android:text="Não há nenhuma notificação até o momento.\n Você pode alterar suas notificações no menu lateral."
        android:layout_gravity="center"
        android:textSize="16sp"
        android:visibility="visible"/>

    </LinearLayout>
</FrameLayout>