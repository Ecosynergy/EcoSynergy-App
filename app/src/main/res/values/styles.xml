<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:itemBackground">@null</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_border</item> <!-- Change to your new drawable -->
        <item name="android:textColor">@color/greenDark</item> <!-- Set specific text color -->
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>